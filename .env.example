# TrueAuthor Production Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://trueauthor_user:CHANGE_THIS_PASSWORD@localhost:5432/trueauthor_prod
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trueauthor_prod
DATABASE_USER=trueauthor_user
DATABASE_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_JWT_SECRET
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1800
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=false
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
POLYGON_RPC_URL=http://127.0.0.1:8545
POLYGON_CHAIN_ID=80001
CONTRACT_ADDRESS=YOUR_CONTRACT_ADDRESS_HERE
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
IPFS_URL=https://ipfs.infura.io:5001

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.txt,.pdf,.docx,.doc
UPLOAD_FOLDER=./uploads

# ============================================
# ML MODEL SETTINGS
# ============================================
MODEL_PATH=./models
USE_GPU=false
BATCH_SIZE=32

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@trueauthor.dev

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=
PROMETHEUS_PORT=9090

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# FRONTEND CONFIGURATION
# ============================================
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_BLOCKCHAIN_NETWORK=localhost
# TrueAuthor Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws

# Blockchain Configuration
REACT_APP_BLOCKCHAIN_NETWORK=localhost
REACT_APP_CHAIN_ID=31337
REACT_APP_CONTRACT_ADDRESS=YOUR_CONTRACT_ADDRESS_HERE

# Application Settings
REACT_APP_NAME=TrueAuthor
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_BLOCKCHAIN=true
REACT_APP_ENABLE_AI_DETECTION=true
REACT_APP_ENABLE_ANALYTICS=true

# Upload Settings
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.doc

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=